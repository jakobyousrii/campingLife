<%- layout("layouts/boilerplate") %> 
<div id="map" class="map"></div>
    <h1 class="text-center mt-4 h1-index">All Campgrounds</h1>
    <a class="text-center d-block mx-auto my-4 linkNew" href="/campgrounds/new">Add New Campground  <i id="icon3" class="fas fa-plus"></i></a>  
        <% for (let campground of campgrounds){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4 col-sm-12">
                        <img class="img-fluid w-100" alt="Responsive image" src="<%= campground.images.length ? campground.images[0].url: "https://images.unsplash.com/photo-1614159038996-f35d39c21290?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1170&q=80"%>">
                        </div>
                    <div class="col-md-8 py-3 col-sm-12 index-text">
                        <h5 class="card-title index-title"><%= campground.title %></h5>
                        <p class="card-text"><%= campground.description.slice(0,280) %>...</p>
                        <p class="card-text">
                            <small class="text-muted"><i class="fas fa-map-marker-alt"></i> <%= campground.location %></small>
                        </p>
                        <div class="card-text">
                        <a href="/campgrounds/<%=campground._id %>" class="btn btn-outline-secondary btn-md">See more </a>
                    </div>
                    </div>
                    </div>
                </div>
            </div>
        <% }%>       
 

<script>
    const mapToken = "<%- process.env.MAPBOX_TOKEN%>";
    const campgrounds = {features: <%-JSON.stringify(campgrounds)%>}
</script>
<script src="/javascripts/clusterMap.js"></script>